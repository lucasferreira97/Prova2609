@model IEnumerable<WebApplication1.Models.Aluno>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Alunos</h2>

@if (!Model.Any())
{
    <p>Nenhum aluno criado ainda.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Cliente</th>
                <th>CPF</th>
                <th>Tipo de Associacao</th>
                <th>Faixa</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var aluno in Model)
            {
                <tr>
                    <td>@Html.ActionLink(@aluno.Nome, "Details", new {aluno.Id})</td>
                    <td>@aluno.CPF</td>
                    <td>@aluno.TipoDeAssociacao.Nome</td>
                    <td>@aluno.Faixa.Nome</td>
                </tr>
            }
        </tbody>
    </table>
}

