@model IEnumerable<WebApplication1.Models.TipoDeAssociacao>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Tipos de Associação</h2>

@if (!Model.Any())
{
    <p>Nenhum tipo criado ainda.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Periodo</th>
                <th>Mensalidade</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tps in Model)
            {
                <tr>
                    <td>@Html.ActionLink(@tps.Nome, "Details", new {aluno.Id})</td>
                    <td>@tps.Periodo</td>
                    <td>@tps.Mensalidade</td>>
                </tr>
            }
        </tbody>
    </table>